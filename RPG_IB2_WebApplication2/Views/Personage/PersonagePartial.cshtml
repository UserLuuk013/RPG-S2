@model RPG_IB2_WebApplication2.Models.PersonageDetailViewModel
@{
    Layout = null;
}

<div class="col-md-10">
    <h2>@Model.Naam</h2>
    <br />
    <table class="table" style="font-size:30px">
        <tbody>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    @Model.ID
                </td>
            </tr>
            <tr>
                <td>
                    Naam
                </td>
                <td>
                    @Model.Naam
                </td>
            </tr>
            <tr>
                <td>
                    HP
                </td>
                <td>
                    @Model.HP
                </td>
            </tr>
            <tr>
                <td>
                    Extra Damage
                </td>
                <td>
                    @Model.Damage
                </td>
            </tr>
            <tr>
                <td>
                    Prijs
