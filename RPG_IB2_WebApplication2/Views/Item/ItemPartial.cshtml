@model RPG_IB2_WebApplication2.Models.ItemDetailViewModel
@{
    Layout = null;
}

<div class="col-md-8">
    <h2>@Model.Naam</h2>
    <br />
    <table class="table" style="font-size:30px">
        <tbody>
            <tr>
                <td>
                    Naam
                </td>
                <td>
                    @Model.Naam
                </td>
            </tr>
            @if (Model.Id != 1 && Model.Id != 7)
            {
                <tr>
                    <td>
                        Prijs
                    </td>
                    <td>
                        @Model.Prijs
                    </td>
                </tr>
            }
            <tr>
                <td>
                    HP
                </td>
                <td>
                    @Model.HP
                </td>
            </tr>
            <tr>
                <td>
                    Type
                </td>
                <td>
                    @Model.Type
                </td>
            </tr>
        </tbody>
    </table>
</div>
